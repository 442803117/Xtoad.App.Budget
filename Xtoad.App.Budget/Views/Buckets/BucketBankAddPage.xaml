<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:localview="clr-namespace:Xtoad.App.Budget.Views.CoustmContentView.Buckets"
             x:Class="Xtoad.App.Budget.Views.Buckets.BucketBankAddPage"
             
             Title="{Binding Title}">
    <ScrollView>
        

    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Text}" FontSize="Large"/>
        <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"  Source="house.jpg" 
                                               VerticalOptions="Center"  
                                               HorizontalOptions="Center"></Image>
        <Label Text="{Binding Description}" FontSize="Small"/>
        <localview:BucketBanPlankListView VerticalOptions="FillAndExpand"/>


        
    </StackLayout>
    </ScrollView>
    
</ContentPage>