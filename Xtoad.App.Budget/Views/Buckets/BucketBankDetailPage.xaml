<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xtoad.App.Budget.Views.Buckets.BucketBankDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Text}" FontSize="Large"/>
        <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"  Source="house.jpg" 
                                               VerticalOptions="Fill" 
                                               HorizontalOptions="Fill"></Image>
        <Label Text="{Binding Description}" FontSize="Small"/>

        <Frame>
            <Label Text="攒钱记录" TextColor="Black"/>
            
        </Frame>
        
    </StackLayout>
    
</ContentPage>