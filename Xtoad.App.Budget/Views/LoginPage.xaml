<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xtoad.App.Budget.Views.LoginPage">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="登录" >
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Entry Text="{Binding LoginForm.LoginNo}" Placeholder="输入登录名"/>
            <Entry Text="{Binding LoginForm.Password}" Placeholder="输入密码" IsPassword="True" />
            <Button VerticalOptions="Center" Text="登录" Command="{Binding LoginCommand}"/>
            <Button VerticalOptions="Center" Text="注册账号" Command="{Binding LoginCommand}"/>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="注册" >
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Entry Text="{Binding LoginForm.LoginNo}" Placeholder="输入登录名"/>
            <Entry Text="{Binding LoginForm.Password}" Placeholder="输入密码" IsPassword="True" />
            <Button VerticalOptions="Center" Text="登录" Command="{Binding LoginCommand}"/>
            <Button VerticalOptions="Center" Text="注册账号" Command="{Binding LoginCommand}"/>
        </StackLayout>
    </ContentPage>
</TabbedPage>